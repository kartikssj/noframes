{
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "webpack.*.js"
  ]
}
